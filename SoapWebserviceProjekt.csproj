<Project Sdk="Microsoft.NET.Sdk">
  <!-- Das Projekt verwendet das offizielle .NET SDK für Konsolen- oder Bibliotheksprojekte -->

  <PropertyGroup>
    <!-- Gibt an, dass beim Build eine ausführbare Datei (EXE) erzeugt wird -->
    <OutputType>Exe</OutputType>

    <!-- Ziel-Framework für die Anwendung: .NET 8.0 -->
    <!-- Wurde von net6.0 auf net8.0 aktualisiert für moderne Features -->
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>

</Project>
